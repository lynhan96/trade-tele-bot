{
  "name": "binance-tele-bot",
  "version": "1.0.0",
  "description": "NestJS Telegram bot for Binance trading with Redis storage",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test:safety": "npx ts-node run-simulator.ts",
    "test:complete": "npx ts-node run-complete-simulator.ts",
    "test:skills": "npx ts-node run-skills-simulator.ts",
    "test:all": "npx ts-node run-all-simulators.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "axios": "^1.13.4",
    "binance-api-node": "^0.12.5",
    "node-telegram-bot-api": "^0.65.1",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@types/node": "^20.11.0",
    "@types/node-telegram-bot-api": "^0.64.5",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
